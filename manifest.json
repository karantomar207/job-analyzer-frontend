{
    "manifest_version": 3,
    "name": "JobLens AI – Smart Job Page Analyzer",
    "version": "2.1.0",
    "description": "Know your chances before you apply. AI-powered resume ↔ job match analysis with skill gap detection.",
    "author": "JobLens AI",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "JobLens AI",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                    "https://www.linkedin.com/jobs/*",
                    "https://linkedin.com/jobs/*",
                    "https://internshala.com/internship/*",
                    "https://internshala.com/jobs/*",

                    "https://www.naukri.com/*",
                    "https://naukri.com/*",
                    "https://*.naukri.com/*",

                    "https://www.instahyre.com/*",
                    "https://instahyre.com/*",

                    "https://www.indeed.com/*",
                    "https://indeed.com/*",
                    "https://*.indeed.com/*",

                    "https://www.glassdoor.com/*",
                    "https://glassdoor.com/*",

                    "https://www.foundit.in/*",
                    "https://foundit.in/*",
                    "https://*.foundit.in/*",

                    "https://www.wellfound.com/*",
                    "https://wellfound.com/*",

                    "https://www.cutshort.io/*",
                    "https://cutshort.io/*",

                    "https://www.hirist.tech/*",
                    "https://hirist.tech/*",

                    "https://www.iimjobs.com/*",
                    "https://iimjobs.com/*",

                    "https://www.upwork.com/*",
                    "https://upwork.com/*",
                    "https://www.freelancer.com/*",
                    "https://freelancer.com/*"
                    ]
                    ,
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://www.linkedin.com/jobs/*",
        "https://linkedin.com/jobs/*",
        "https://internshala.com/internship/*",
        "https://internshala.com/jobs/*",

        "https://www.naukri.com/*",
        "https://naukri.com/*",
        "https://*.naukri.com/*",

        "https://www.instahyre.com/*",
        "https://instahyre.com/*",

        "https://www.indeed.com/*",
        "https://indeed.com/*",
        "https://*.indeed.com/*",

        "https://www.glassdoor.com/*",
        "https://glassdoor.com/*",

        "https://www.foundit.in/*",
        "https://foundit.in/*",
        "https://*.foundit.in/*",

        "https://www.wellfound.com/*",
        "https://wellfound.com/*",

        "https://www.cutshort.io/*",
        "https://cutshort.io/*",

        "https://www.hirist.tech/*",
        "https://hirist.tech/*",

        "https://www.iimjobs.com/*",
        "https://iimjobs.com/*",

        "https://www.upwork.com/*",
        "https://upwork.com/*",
        "https://www.freelancer.com/*",
        "https://freelancer.com/*"
        ],

    "options_page": "options.html",
    "web_accessible_resources": [
        {
            "resources": [
                "icons/*",
                "styles.css",
                "options.html",
                "options.js",
                "libs/*",
                "utils/*.js"
            ],
            "matches": [
            "https://www.linkedin.com/jobs/*",
            "https://linkedin.com/jobs/*",
            "https://internshala.com/internship/*",
            "https://internshala.com/jobs/*",

            "https://www.naukri.com/*",
            "https://naukri.com/*",
            "https://*.naukri.com/*",

            "https://www.instahyre.com/*",
            "https://instahyre.com/*",

            "https://www.indeed.com/*",
            "https://indeed.com/*",
            "https://*.indeed.com/*",

            "https://www.glassdoor.com/*",
            "https://glassdoor.com/*",

            "https://www.foundit.in/*",
            "https://foundit.in/*",
            "https://*.foundit.in/*",

            "https://www.wellfound.com/*",
            "https://wellfound.com/*",

            "https://www.cutshort.io/*",
            "https://cutshort.io/*",

            "https://www.hirist.tech/*",
            "https://hirist.tech/*",

            "https://www.iimjobs.com/*",
            "https://iimjobs.com/*",

            "https://www.upwork.com/*",
            "https://upwork.com/*",
            "https://www.freelancer.com/*",
            "https://freelancer.com/*"
            ]

        }
    ]
}